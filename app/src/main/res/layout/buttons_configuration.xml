<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="2dip" >

            <TextView
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:text="@string/buttonsConfig_buttonsAB" />

            <CheckBox
                android:layout_columnSpan="3"
                android:id="@+id/buttonsConfig_separateButtonsAB"
                android:layout_gravity="fill"
                android:layout_marginRight="5dip"
                android:text="@string/buttonsConfig_separate" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="2dip" >

            <TextView
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:text="@string/buttonsConfig_buttonsC" />

            <CheckBox
                android:layout_columnSpan="3"
                android:id="@+id/buttonsConfig_separateButtonsC"
                android:layout_gravity="fill"
                android:layout_marginRight="5dip"
                android:text="@string/buttonsConfig_separate" />

        </GridLayout>
    </LinearLayout>

</ScrollView>